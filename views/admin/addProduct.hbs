<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<script type="text/javascript" src="/javascripts/admin/addProduct.js"></script>
<link rel="stylesheet" href="/stylesheets/admin/admin.css">


<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row" style="margin-top:2%; padding-left:15%; padding-right:15%">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h3>Add Product</h3>
                <div class="row">
                    <form action='/admin/addProduct' method='POST' enctype="multipart/form-data">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <input id="title" name="productname" type="text" class="form-control" placeholder="Product Name" style="width:330px">
                                    </div>
                                    <div class="form-group">
                                        <input name="price" id="detail" type="text" class="form-control" placeholder="Price" style="width:330px">
                                    </div>
                                    <div class="form-group">
                                        <textarea name="detail" placeholder="Detail" style="width:330px; height:100px"></textarea>
                                    </div>
                                    <input type="file" name="pic" accept="image/*" multiple>

                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="dropdown-content">
                                        <label class="color">COLOR</label>
                                        <br>
                                        <input class="black" type="button" onclick="bthClikedFilter('Black');" />
                                        <input class="white" type="button" onclick="bthClikedFilter('White');" />
                                        <input class="red" type="button" onclick="bthClikedFilter('Red');" />
                                        <input class="blue" type="button" onclick="bthClikedFilter('Blue');" />
                                        <input class="yellow" type="button" onclick="bthClikedFilter('Yellow');" />
                                        <br>
                                        <label class="color">SIZE</label>
                                        <br>
                                        <input class="signatureColor" type="button" value="XS" onclick="bthClikedFilter('XS');" />
                                        <input class="signatureColor" type="button" value="S" onclick="bthClikedFilter('S');" />
                                        <input class="signatureColor" type="button" value="M" onclick="bthClikedFilter('M');" />
                                        <input class="signatureColor" type="button" value="L" onclick="bthClikedFilter('L');" />
                                        <input class="signatureColor" type="button" value="XL" onclick="bthClikedFilter('XL');" />
                                        <br>
                                        <hr class="teal accent-3 mb-4 mt-0 d-inline-block mx-auto" style="width: 95%;">
                                    </div>
                                    <div class="form-group">
                                        <input name="size" type="text" class="form-control" placeholder="Size" style="width:330px">
                                    </div>
                                    <div class="form-group">
                                        <textarea name="description" placeholder="Description" style="width:330px; height:200px"></textarea>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="payment-adress">
                                            <button type='submit' class="btn btn-primary waves-effect waves-light">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>