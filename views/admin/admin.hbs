<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="stylesheets/admin/admin.css" rel="stylesheet">

<!-- Single pro tab review Start-->
<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row" style="margin-top:2%; padding-left:15%; padding-right:15%">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div id="myTabContent" class="tab-content custom-product-edit">
                    <div class="product-tab-list tab-pane fade active in" id="description">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="review-content-section">
                                    <div id="dropzone1" class="pro-ad addcoursepro">
                                        <form action="/upload" class="dropzone dropzone-custom needsclick addcourse" id="demo1-upload">
                                            <div class="row">
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                    <div class="form-group">
                                                        <input name="productname" type="text" class="form-control"
                                                            placeholder="Product Name" style="width:300px">
                                                    </div>
                                                    <div class="form-group">
                                                        <input name="price" id="detail" type="text" class="form-control"
                                                            placeholder="Price" style="width:300px">
                                                    </div>

                                                    <div class="form-group">
                                                        <input name="detail" type="text" class="form-control"
                                                            placeholder="Detail" style="width:300px; height:100px">
                                                    </div>
                                                    <div class="form-group alert-up-pd">
                                                        <div class="dz-message needsclick download-custom">
                                                            <i class="fa fa-download edudropnone" aria-hidden="true"></i>
                                                            <h2 class="edudropnone">Drop image here or click to upload.</h2>
                                                            <p class="edudropnone"><span class="note needsclick">(This
                                                                    is just a demo dropzone. Selected image is <strong>not</strong>
                                                                    actually uploaded.)</span>
                                                            </p>
                                                            <input name="imageico" class="hd-pro-img" type="text" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                    <div class="form-group res-mg-t-15">
                                                        <input name="color" type="text" class="form-control"
                                                            placeholder="Color" style="width:300px">
                                                    </div>
                                                    <div class="form-group">
                                                        <input name="size" type="text" class="form-control" placeholder="Size"
                                                            style="width:300px">
                                                    </div>
                                                    <div class="form-group">
                                                        <textarea name="description" placeholder="Description" style="width:400px; height:200px"></textarea>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="payment-adress">
                                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>