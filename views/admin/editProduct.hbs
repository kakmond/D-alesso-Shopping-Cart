<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

<script type="text/javascript" src="/javascripts/admin/editProduct.js"></script>


<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row" style="margin-top:2%; padding-left:15%; padding-right:15%">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h3>Edit Product</h3>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input id="title" name="productname" type="text" class="form-control" value="{{product.title}}" style="width:330px">
                                </div>
                                <div class="form-group">
                                    <input name="price" id="price" type="text" class="form-control" value="{{product.price}}" style="width:330px">
                                </div>
                                <div class="form-group">
                                    <textarea id="detail" name="detail" style="width:330px; height:100px">{{product.detail}}</textarea>
                                </div>
                                <div class="form-group">
                                    <textarea id="description" name="description" style="width:330px; height:200px">{{product.description}}</textarea>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

                                {{#each product.color}}
                                <div class="color">
                                    <label>{{@key}}</label>
                                    {{#each this}}
                                    <input type="text" class="form-control" value="{{this}}"> {{/each}}
                                </div>
                                {{/each}}




                                <label>Size</label>

                                {{#each product.size}}

                                <input type="text" class="size form-control" value="{{@key}}"> {{/each}}



                            </div>
                            <br>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="payment-adress">
                                        <button id="submitBth" class="btn btn-primary waves-effect waves-light">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>