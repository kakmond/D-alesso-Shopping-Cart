<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="/stylesheets/shop/product.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">	
<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

{{# if this.product}}
	<div class="container card container-fliud wrapper">
		<div class="row">
			<div class="preview col-md-6">
				<div class="preview-pic tab-content">
					<div class="tab-pane active" id="pic-1"><img src="{{ product.imagePath_1 }}" /></div>
					<div class="tab-pane" id="pic-2"><img src="{{ product.imagePath_2 }}" /></div>
					<div class="tab-pane" id="pic-3"><img src="{{ product.imagePath_3 }}" /></div>
					<div class="tab-pane" id="pic-4"><img src="{{ product.imagePath_4 }}" /></div>
					<div class="tab-pane" id="pic-5"><img src="{{ product.imagePath_5 }}" /></div>
				</div>
				<ul class="preview-thumbnail nav nav-tabs">
					<li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="{{ product.imagePath_1 }}" /></a></li>
					<li><a data-target="#pic-2" data-toggle="tab"><img src="{{ product.imagePath_2 }}" /></a></li>
					<li><a data-target="#pic-3" data-toggle="tab"><img src="{{ product.imagePath_3 }}" /></a></li>
					<li><a data-target="#pic-4" data-toggle="tab"><img src="{{ product.imagePath_4 }}" /></a></li>
					<li><a data-target="#pic-5" data-toggle="tab"><img src="{{ product.imagePath_5 }}" /></a></li>
				</ul>	
			</div>
			<div class="details col-md-6">
				<h3 class="product-title">{{ product.title }}</h3>
				<p class="product-description">{{ product.description}}</p>
				<h4 class="price">current price: <span>à¸¿{{ product.price }}</span></h4>
				<h5 class="sizes">sizes:
						<span class="size" data-toggle="tooltip" title="xtra small">xs</span>
					<span class="size" data-toggle="tooltip" title="small">s</span>
					<span class="size" data-toggle="tooltip" title="medium">m</span>
					<span class="size" data-toggle="tooltip" title="large">l</span>
					<span class="size" data-toggle="tooltip" title="xtra large">xl</span>
				</h5>
				<h5 class="colors">colors:
					<span class="color orange not-available" data-toggle="tooltip" title="Not In store"></span>
					<span class="color green"></span>
					<span class="color blue"></span>
				</h5>
				<a class="action" href="/add-to-cart/{{ product._id }}">
					<input type="submit" value="ADD TO CART">
				</a>
			</div>
		</div>
	</div>
{{/if}}