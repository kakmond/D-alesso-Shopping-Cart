{{# if this.products }}
<main class="page">
	<section class="shopping-cart dark container content row">
		<div class="col-md-12 col-lg-8">
			<div class="items">
				<div class="product">
					<div class="row">
						{{#each products}} {{#ifCond qty '>=' 1}}
						<div class="col-md-3">
							{{#each this.item.color }}
								{{#if @first}}
									{{#with this}}
										<img class="img-responsive" src="{{ this.[0] }}">
									{{/with}}
								{{/if}}
							{{/each}}
							<img class="img-responsive" src="{{ this.item.imagePath_1 }}">
						</div>
						<div class="col-md-8 info row">
							<div class="col-md-5 product-name">
								<div class="product-name">
									<h5>{{ this.item.title }}</h5>
									<div class="product-info">
										<div>Category:
											<span class="value">{{ this.item.category }} - {{ this.item.subcategory }}</span>
										</div>
										<div>Color:
											<span class="value">{{ this.color }}</span>
										</div>
										<div>Size:
											<span class="value">{{ this.size }}</span>
										</div>
									</div>
								</div>
							</div>
							<div class="col-md-4">
								<label for="quantity">Quantity:</label>
								<input class="quantity" type="number" value="{{ this.qty }}" min="1" class="form-control quantity-input" field='{{ this.id }}'>
							</div>
							<span>฿</span>
							<span class="eachPrice" id="updates_{{ this.id }}">{{ this.price }}</span>

							<div class="col-md-3 price">
								<br>
								<span class="price">฿ </span>
								<span id="perPrice_{{ this.id }}">{{ this.item.price }}</span>
								<br><br><br><br><br>
							</div>
						</div>
						{{/ifCond}} {{/each}}
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-12 col-lg-4">
			<div class="summary">
				<h3>Summary</h3>
				<div class="summary-item">
					<span class="text">Subtotal</span>
					<span class="price">฿</span>
					<span id="subtotal" class="price">{{ totalPrice }}</span>
				</div>
				<div class="summary-item">
					<span class="text">Discount</span>
					<span class="price">฿</span>
					<span class="price">0</span>
				</div>
				<div class="summary-item">
					<span class="text">Shipping</span>
					<span class="price">฿</span>
					<span class="price">0</span>
				</div>
				<div class="summary-item">
					<span class="text">Total</span>
					<span class="price">฿</span>
					<span id="total" class="price">{{ totalPrice }}</span>
				</div>
				<input type="submit" class="checkout" value="Checkout">
			</div>
		</div>
	</section>
</main>
{{else}}
